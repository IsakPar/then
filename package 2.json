{
  "name": "lastminutelive",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:db": "cd db && docker-compose up -d",
    "dev:db:stop": "cd db && docker-compose down",
    "dev:db:logs": "cd db && docker-compose logs -f postgres",
    "dev:admin": "open http://localhost:5050",
    "db:reset": "./db/scripts/reset.sh",
    "db:migrate": "./db/scripts/migrate.sh",
    "db:backup": "./db/scripts/backup.sh",
    "db:restore": "./db/scripts/restore.sh",
    "db:status": "cd db && docker-compose ps && docker-compose exec postgres pg_isready -U postgres -d lastminutelive",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:introspect": "drizzle-kit introspect",
    "db:test": "npx tsx src/lib/db/test.ts",
    "db:verify": "NODE_ENV=development tsx src/lib/db/verifyConnection.ts"
  },
  "dependencies": {
    "@stripe/stripe-js": "^7.3.1",
    "@supabase/supabase-js": "^2.50.0",
    "bcrypt": "^6.0.0",
    "cheerio": "^1.1.0",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.44.2",
    "next": "15.3.3",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "resend": "^4.5.2",
    "slugify": "^1.6.6",
    "stripe": "^18.2.1",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@magicuidesign/cli": "^1.0.3",
    "@supabase/mcp-server-supabase": "^0.4.5",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.4",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
